          (set! x (* 2 (* x exc)))
          (throw x) )
        #f ) )
    (lambda (exc)
      (print x)(print exc)
      (set! x (* 3 (* x exc))) )
    #f )
  (= x 972) )

;;; end of u67-3.scm

